---
import { Star } from "lucide-react";
import { CTAButtons } from "@/components/CTAButtons";
import OptimizedImage from "@/components/OptimizedImage.astro";

interface Props {
  title: string;
  description: string;
  heroImage: string;
}

const { title, description, heroImage } = Astro.props;
---

<section class="relative h-[50vh] min-h-[300px] overflow-hidden pt-12">
  <div class="absolute inset-0">
    <OptimizedImage
      src={heroImage}
      alt={title}
      className="h-full w-full object-cover"
      priority
    />
    <div class="absolute inset-0 bg-black/60"></div>
  </div>
  <div class="container relative z-10 mx-auto flex h-full items-center px-4">
    <div class="max-w-3xl">
      <h1
        class="text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl"
      >
        {title}
      </h1>
      <p class="mt-6 text-lg text-white/90">
        {description}
      </p>
      <div class="mt-4 flex items-center gap-2">
        {
          Array.from({ length: 5 }).map((_, i) => (
            <Star key={i} className="h-5 w-5 fill-yellow-400 text-yellow-400" />
          ))
        }
        <span class="ml-2 text-white">Rated 4.9/5 by our customers</span>
      </div>
      <div class="mt-8">
        <CTAButtons client:visible variant="hero" />
      </div>
    </div>
  </div>
</section>
