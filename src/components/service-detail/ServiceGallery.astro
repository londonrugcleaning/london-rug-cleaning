---
import OptimizedImage from "@/components/OptimizedImage.astro";

interface Props {
  title: string;
  gallery: string[];
}

const { title, gallery } = Astro.props;
---

<section class="bg-slate-50 py-24">
  <div class="container mx-auto px-4">
    <h2 class="mb-12 text-center text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
      Our Work
    </h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {gallery.map((image, index) => (
        <div class="aspect-square overflow-hidden rounded-2xl shadow-md group">
          <OptimizedImage
            src={image}
            alt={`${title} example ${index + 1}`}
            className="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
        </div>
      ))}
    </div>
  </div>
</section>
