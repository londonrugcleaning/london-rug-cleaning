---
import { CTAButtons } from "../CTAButtons";

interface Props {
  title?: string;
}

const { title = "Ready to Revitalize Your Rugs?" } = Astro.props;
---

<section
  id="contact-section"
  class="py-24 bg-blue-900 text-white relative overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10 pattern-dots-md"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-6">
        {title}
      </h2>
      <p class="text-xl text-blue-100 mb-10 leading-relaxed">
        Book your free collection today and experience the difference of
        professional rug cleaning. We serve all of London with 7-day
        availability.
      </p>
      <div class="flex justify-center">
        <CTAButtons client:visible variant="secondary" />
      </div>
    </div>
  </div>
</section>
