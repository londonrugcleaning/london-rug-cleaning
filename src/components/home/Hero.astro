---
import { Truck, Shield, Calendar } from "lucide-react";
import { CTAButtons } from "../CTAButtons";
import Review from "../ui/review";
import OptimizedImage from "@/components/OptimizedImage.astro";

const benefits = [
  {
    icon: Shield,
    title: "Experts in Oriental Rugs",
    description: "Specialized care for Persian, Silk & Antique rugs",
  },
  {
    icon: Truck,
    title: "Free Collection & Delivery",
    description: "Covering all London postcodes",
  },
  {
    icon: Calendar,
    title: "7-Day Service",
    description: "Flexible booking times to suit you",
  },
];
---

<section
  class="relative overflow-hidden bg-slate-50 pt-20 pb-16 lg:pt-32 lg:pb-24"
>
  {/* Background Elements */}
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div
      class="absolute right-0 top-0 h-[600px] w-[600px] bg-blue-400 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>
    <div
      class="absolute left-0 bottom-0 h-[400px] w-[400px] bg-blue-300 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
    >
    </div>
  </div>

  <div class="container relative z-10 mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <div class="flex flex-col justify-center text-center lg:text-left">
        <div class="animate-fade-up space-y-8">
          <h1
            class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl lg:text-6xl leading-tight"
          >
            Professional
            <span class="text-blue-600 block mt-2"> Rug Cleaning </span>
            <span class="block mt-2">Service in London</span>
          </h1>

          <div class="flex justify-center lg:justify-start">
            <Review client:visible />
          </div>
          <p
            class="text-lg text-slate-600 leading-relaxed max-w-2xl mx-auto lg:mx-0"
          >
            Restore the vibrant colors and soft texture of your fine rugs. We
            specialize in the cleaning and restoration of Persian, Oriental, and
            handmade rugs with over 30 years of expertise.
          </p>

          <div
            class="flex flex-col gap-4 sm:flex-row justify-center lg:justify-start"
          >
            <CTAButtons client:visible />
          </div>
        </div>
      </div>

      <div class="relative hidden lg:block animate-fade-up order-last">
        <div class="absolute -inset-4 bg-white/50 rounded-2xl blur-xl -z-10">
        </div>
        <div
          class="relative rounded-2xl overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-all duration-500 ring-1 ring-slate-100"
        >
          <OptimizedImage
            src="/images/Professional Rug Cleaning London.webp"
            alt="Professional rug cleaning service in London"
            className="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-700"
            priority
          />
        </div>
        {/* Floating Badge */}
        <div
          class="absolute -bottom-8 -left-8 bg-white p-4 rounded-xl shadow-xl flex items-center gap-3 animate-bounce-slow"
        >
          <div class="bg-green-100 p-2 rounded-full">
            <Shield className="w-6 h-6 text-green-600" />
          </div>
          <div>
            <p
              class="text-xs text-slate-500 font-semibold uppercase tracking-wider"
            >
              Guaranteed
            </p>
            <p class="text-sm font-bold text-slate-900">100% Satisfaction</p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-20 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        benefits.map((benefit, index) => {
          const Icon = benefit.icon;
          return (
            <div
              class="group relative overflow-hidden rounded-2xl bg-white p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100"
              style={{ animationDelay: `${index * 100}ms` }}
            >
              <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <Icon className="w-24 h-24 text-blue-600 transform rotate-12" />
              </div>

              <div class="relative z-10">
                <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 group-hover:bg-blue-600 transition-colors duration-300">
                  <Icon
                    className="h-7 w-7 text-blue-600 group-hover:text-white transition-colors duration-300"
                    aria-hidden="true"
                  />
                </div>
                <h2 class="mb-3 text-xl font-bold text-slate-900">
                  {benefit.title}
                </h2>
                <p class="text-slate-600 leading-relaxed">
                  {benefit.description}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
