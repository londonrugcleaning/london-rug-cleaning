---
import Layout from '../../layouts/Layout.astro';
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { CTAButtons } from "@/components/CTAButtons";
import { ServiceSchema } from "@/components/seo/ServiceSchema";
import {
  Droplets, Home, Award, Paintbrush, Gem,
  Feather, Scissors, ShieldCheck
} from "lucide-react";

const services = [
  {
    id: "persian-rug-cleaning",
    title: "Persian Rug Cleaning",
    description: "Expert care for your valuable Persian rugs using traditional methods and modern technology",
    icon: Gem,
    color: "bg-blue-100",
  },
  {
    id: "oriental-rug-cleaning",
    title: "Oriental Rug Cleaning",
    description: "Specialized cleaning for delicate oriental rugs with attention to detail",
    icon: Paintbrush,
    color: "bg-green-100",
  },
  {
    id: "wool-rug-cleaning",
    title: "Wool Rug Cleaning",
    description: "Professional wool rug cleaning that preserves fiber integrity and natural colors",
    icon: Feather,
    color: "bg-purple-100",
  },
  {
    id: "area-rug-cleaning",
    title: "Area Rug Cleaning",
    description: "Comprehensive cleaning solutions for all types of area rugs",
    icon: Home,
    color: "bg-yellow-100",
  },
  {
    id: "synthetic-rug-cleaning",
    title: "Synthetic Rug Cleaning",
    description: "Specialized cleaning for modern synthetic rugs using advanced techniques",
    icon: ShieldCheck,
    color: "bg-indigo-100",
  },
  {
    id: "antique-rug-cleaning",
    title: "Antique Rug Cleaning",
    description: "Delicate handling and restoration of vintage and antique rugs",
    icon: Award,
    color: "bg-amber-100",
  },
  {
    id: "hand-knotted-rug-cleaning",
    title: "Hand-Knotted Rug Cleaning",
    description: "Meticulous cleaning of handcrafted luxury rugs",
    icon: Scissors,
    color: "bg-pink-100",
  },
  {
    id: "rug-stain-removal",
    title: "Rug Stain Removal",
    description: "Professional spot and stain treatment for all rug types",
    icon: Droplets,
    color: "bg-teal-100",
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Professional Rug Cleaning Services in London",
  "description": "Expert rug cleaning services near you. Specializing in Persian, Oriental, and Wool rugs with free collection and delivery across London.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "London Rug Cleaning"
  }
};
---

<Layout 
  title="Professional Rug Cleaning Services in London" 
  description="Expert rug cleaning services near you. Specializing in Persian, Oriental, and Wool rugs with free collection and delivery across London."
  schema={schema}
>
  <div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
    {/* Hero Section */}
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-3xl text-center">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
            Professional <span class="text-blue-800">Rug Cleaning</span> Services in London
          </h1>
          <p class="mt-6 text-lg text-muted-foreground">
            Expert rug cleaning services near you. Specializing in Persian, Oriental, and Wool rugs
            with free collection and delivery across London.
          </p>
          <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
            <CTAButtons variant="hero" client:load />
          </div>
        </div>
      </div>
    </section>

    {/* Services Grid */}
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {services.map((service) => (
            <a href={`/services/${service.id}`} class="block h-full">
              <Card className="group h-full cursor-pointer transition-all hover:shadow-lg">
                <div class="p-6">
                  <div class={`mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl ${service.color}`}>
                    <service.icon className="h-6 w-6 text-blue-800" />
                  </div>
                  <h3 class="mb-2 text-xl font-semibold group-hover:text-blue-900">
                    {service.title}
                  </h3>
                  <p class="text-muted-foreground">{service.description}</p>
                </div>
              </Card>
            </a>
          ))}
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-blue-900 py-20 text-white">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-3xl text-center">
          <h2 class="text-3xl font-bold sm:text-4xl">
            Ready to Get Your Rugs Professionally Cleaned?
          </h2>
          <p class="mt-4 text-blue-100">
            Book your free collection today and experience the difference of professional rug cleaning.
          </p>
          <Button
            size="lg"
            variant="secondary"
            className="mt-8"
            client:visible
            asChild
          >
            <a href="/contact">Get a Free Quote</a>
          </Button>
        </div>
      </div>
    </section>
  </div>
</Layout>
